<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh_interesi"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edt_inputSearch"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="@string/search_hint"
            android:inputType="textVisiblePassword"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <ListView
            android:id="@+id/interesi_lista"
            android:layout_width="wrap_content"
            android:layout_height="365dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1.47"
            android:background="#FFFFFF" >
        </ListView>

        <Button
            android:id="@+id/btn_odabrani_interesi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_design"
            android:text="@string/btn_spremi" />
    </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>