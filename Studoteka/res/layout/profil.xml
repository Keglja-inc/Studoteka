<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="222dp"
        android:layout_height="150dp"
        
        
        android:src="@android:drawable/divider_horizontal_bright" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edt_korisnicko_ime"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edt_korisnicko_ime"
        android:layout_alignBottom="@+id/edt_korisnicko_ime"
        android:layout_alignParentLeft="true"
        android:text="Korisničko ime:" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edt_email"
        android:layout_alignBottom="@+id/edt_email"
        android:layout_alignParentLeft="true"
        android:text="E-mail:" />

    <EditText
        android:id="@+id/edt_korisnicko_ime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_user"
        android:ems="10"
        android:inputType="textPersonName" />

</RelativeLayout>